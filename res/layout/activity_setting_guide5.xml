<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#6DBAEB"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:text="5.恭喜您，设置完成"
        android:textColor="#fff"
        android:textSize="18sp" />
    
    <CheckBox 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:text="选中开启防盗保护"
        android:textColor="#000000"
        android:textSize="16sp"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/sjfd_step_5" />

        <Button
            android:onClick="nextPage"
            android:id="@+id/bt_guide_next1"
            style="@style/ButtonNext"
            android:text="设置完成" />

        <Button
            android:onClick="prePage"
            android:id="@+id/bt_guide_next1"
            style="@style/ButtonPrevious"
            android:text="上一步" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_guard_dot1"
                style="@style/SettingGuideNext"
                 />

            <ImageView
                android:id="@+id/iv_guard_dot2"
                style="@style/SettingGuideNext" 
                />

            <ImageView
                android:id="@+id/iv_guard_dot3"
                style="@style/SettingGuideNext" />

            <ImageView
                android:id="@+id/iv_guard_dot4"
                style="@style/SettingGuideNext" />

            <ImageView
                android:src="@android:drawable/presence_online"
                android:id="@+id/iv_guard_dot5"
                style="@style/SettingGuideNext" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
