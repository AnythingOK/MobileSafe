<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:text="设置中心"
	    android:textSize="20sp"
	    android:textColor="#fff"
	    android:background="#99ccff"
	    android:gravity="center"
	    />
    
	<RelativeLayout 
	    android:id="@+id/rl_updata"
	    android:background="@drawable/selector_setting_first"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    >
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="自动更新设置"
	        android:textSize="16sp"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginBottom="5dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <com.lingzhi.mobilesafe.ui.SwitchView 
	        android:id="@+id/ivs_updata"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/settting_on"
	        android:layout_alignParentRight="true"
			android:layout_marginRight="5dp"
			android:padding="5dp"
			android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rl_intercept"
	    android:background="@drawable/selector_setting_last"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="骚扰拦截设置"
	        android:textSize="16sp"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <com.lingzhi.mobilesafe.ui.SwitchView 
	        android:id="@+id/ivs_intercept"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/settting_on"
			android:layout_alignParentRight="true"
			android:layout_marginRight="5dp"
			android:padding="5dp"
			android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/rl_style"
	    android:background="@drawable/selector_setting_first"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    >
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="归属地显示设置"
	        android:textSize="16sp"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginBottom="5dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <com.lingzhi.mobilesafe.ui.SwitchView 
	        android:id="@+id/ivs_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/settting_on"
			android:layout_alignParentRight="true"
			android:layout_marginRight="5dp"
			android:padding="5dp"
			android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	<RelativeLayout 
	    android:background="@drawable/settting_last_normal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="归属地风格设置"
	        android:textSize="16sp"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        />
	    
	</RelativeLayout>
	
</LinearLayout>